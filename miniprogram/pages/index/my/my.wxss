/* miniprogram/pages/index/my/my.wxss */
.my{
  margin: 40rpx 0 0 0;
}

.my .userinfo-avatar{
  flex: 1;
  display: inline-block;
  width: 150rpx;
  height: 150rpx;
  border-radius: 100rpx;
}
.my .text-info{
  padding: 10px 0;
  display: flex;
  flex-direction: column;
}
.my .text-info .info{
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}
.my .text-info .info .title{
  text-align: right;
  margin-right: 10px;
  font-size: 16px;
  width: 70px;
}

.my .text-info .info .value{
  margin-right: 15px;
  font-size: 16px;
}